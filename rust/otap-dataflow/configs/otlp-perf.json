{
  "settings": {
    "default_control_channel_size": 100,
    "default_pdata_channel_size": 100
  },
  "nodes": {
    "receiver": {
      "kind": "receiver",
      "plugin_urn": "urn::otel::otlp::receiver",
      "out_ports": {
        "out_port": {
          "destinations": [
            "perf"
          ],
          "dispatch_strategy": "round_robin"
        }
      },
      "config": {
        "listening_addr": "127.0.0.1:4317"
      }
    },
    "perf": {
      "kind": "exporter",
      "plugin_urn": "urn:otel:otap:perf:exporter",
      "config": {
        "frequency": 5000,
        "cpu_usage": false,
        "memory_usage": false,
        "disk_usage": false,
        "io_usage": false
      }
    }
  }
}

